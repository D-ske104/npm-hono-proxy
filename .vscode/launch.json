{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug: Dev Server",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "console": "integratedTerminal",
      "env": {
        "PORT": "4873"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug: Built CLI",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/bin/cli.js",
      "preLaunchTask": "npm: build",
      "console": "integratedTerminal",
      "env": {
        "PORT": "4873"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug: Current Test File",
      "autoAttachChildProcesses": true,
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ],
      "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
      "args": [
        "run",
        "${relativeFile}"
      ],
      "smartStep": true,
      "console": "integratedTerminal"
    }
  ]
}
